#cloud-config
preserve_hostname: true
timezone: ${timezone}
users:
  # - default
  - name: ${username}
    passwd: ${password_hash}
    lock_passwd: false
    groups:
      - sudo
    shell: /bin/bash
    sudo: ALL=(ALL) NOPASSWD:ALL
    ssh_authorized_keys:
      - ${ssh_authorized_keys_5}
chpasswd:
  expire: false
package_update: true
packages:
  - qemu-guest-agent
  - net-tools
  - curl
  - chrony
  - tzdata
  - dnsutils
  - nano
  - wget
  - nc
  - mc
runcmd:
  - systemctl enable qemu-guest-agent --now
  - systemctl enable chronyd --now
  - sed -i 's/^PasswordAuthentication no/PasswordAuthentication yes/' /etc/openssh/sshd_config
  - sed -i 's/^#Port 22$/Port 20122/' /etc/openssh/sshd_config
  - systemctl restart sshd
  - echo "done" > /tmp/cloud-config.done